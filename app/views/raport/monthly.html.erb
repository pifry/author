<form name='dateform' action='monthly'>
<h1>Zestawienie miesięczne 
<%= select_date @mydate, {:discard_day => true }, :onchange => "this.form.submit()" %>
</h1>
</form>

<h1>Dział: <%= Department.find(current_user.department_id).name %></h1>


<table border="1" class="outertable">
	<tr>
		<th>nazwa</th>
		<th>numer</th>
		<th colspan="3"">zadania</th>
	</tr>
<% @DepartmentSum = 0 %>
<% @employees.each do |employee| %>
<% @asgnmts = employee.assignments.find(:all, :conditions => ["DATE(date) = ?", @mydate]) %>
	<tr>
		<%= content_tag :th, employee.name, :rowspan => @asgnmts.count+2 %>
		<%= content_tag :th, employee.number, :rowspan => @asgnmts.count+2 %>
		<th>nazwa</th>
		<th>pracochłonność</th>
		<th></th>
	</tr>
<% @EmployeeSum = 0 %>
<% @asgnmts.each do |asgn| %>
	<tr>
		<td><%= Project.find(asgn.project_id).name %></th>
		<td><%= asgn.ManHour %></th>
		<td><%= link_to 'Zmień', edit_assignment_path(asgn, :employee_id => employee.id) %></th>
	</tr>
<% end %>
	<tr>
		<th>Suma:</th>
		<th>0</th>
		<th></th>
	</tr>
<% end %>
	<tr>
		<th colspan="4"></th>
		<th><%= @DepartmentSum %></th>
	</tr>
</table>

















